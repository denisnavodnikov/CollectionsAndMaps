<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <TextView
            android:id="@+id/collections_text_view_elements"
            android:text="@string/elements"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="12dp"/>

        <TextView
            android:id="@+id/collections_text_view_threads"
            android:text="@string/threads"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"/>

        <EditText
            android:id="@+id/collections_edit_text_elements"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:hint="@string/enter_elements_amount" />

        <EditText
            android:id="@+id/collections_edit_text_threads"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="80dp"
            android:hint="@string/enter_threads_amount" />
        <Button
            android:id="@+id/collections_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp" />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_collections_and_maps" />


</LinearLayout>